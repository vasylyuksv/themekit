<script>
  $('.date-mask').inputmask('dd/mm/yyyy', { 'placeholder': 'дд/мм/рррр' });
  
  $('.phone-mask').inputmask('+38(999)-999-99-99', { 'placeholder': '+38(___)-___-__-__' });
  
  $(document).on('submit', '#test_drive_form', function(e) {
  	e.preventDefault();
    
    var $form = $(e.currentTarget), fio, fioError, errClass = 'input--error', agreeError, submitBtn, deviceError, hasError = false,
        $formSuccess = $('.form-success-message');

    $form.find('input, select').removeClass(errClass);
    $form.find('input[name="check"]').prev().removeClass(errClass);
    
    fio = $form.find('input[name="name"]').val().trim();
    fioError = $('#fioError').hide();
    agreeError = $('#agreeError').hide();
    deviceError = $('#deviceError').hide();
    
    if(!/^[^\s]+\s+[^\s]+$/.test(fio)) {
      	fioError.show();
        $form.find('input[name="name"]').addClass(errClass);
        hasError = true;
    }

    if(!$('#DriveFormCheck').is(':checked')) {
        agreeError.show();
        hasError = true;
    }

    if(!$('[name="device"]:checked').val()) {
        deviceError.show();
        hasError = true;
    }

    if(hasError) {
        return false;
    }
    
	if(typeof Cpa !== 'undefined') {
		Cpa.onTestDriveSubmit();
	}

	submitBtn = $form.find('[type="submit"]').attr('disabled', true);

    $.post($form.attr('action'), $form.serialize(), function(response) {
        var redirectUrl;
    	$form.slideUp();
      	$formSuccess.find('.success-user-name').text($form.find('input[name="name"]').val());
      	$formSuccess.slideDown();

      	redirectUrl = window.location.pathname.replace(/\/$/, "") + "/?thanks";
        if($('[name="device"]:checked').val()) {
            redirectUrl += '=' + $('[name="device"]:checked').val();
        }
      
      	window.history.replaceState(null, null, redirectUrl);

        if($('#formTypeInp').val() == '13') { // free-test-drive-pro
            var PL_clickidValue = readCookie('PL_clickid');
            var CLICK_ID = PL_clickidValue;

            var ACTION_ID = response.id;

            var pixel = document.createElement("img");
            pixel.setAttribute('src', 'https://cpa.univermag.store/postback?clickid=' + CLICK_ID + '&action_id=' + ACTION_ID + '&status=2');
            pixel.setAttribute('alt', '');
            pixel.setAttribute('height', '1');
            pixel.setAttribute('width', '1');
            document.body.appendChild(pixel);

            console.log('test-drive-pro');
        }

    }, 'json')
    .fail(function(response) {
      	$.each(response.responseJSON.errors, function(i, v) {
          if (i == 'check') {
            $('input[name="check"]').prev().addClass(errClass);
          } else {
          	$('[name="'+i+'"]').addClass(errClass);
          }
        });

      submitBtn.attr('disabled', false);
    });
  });

  $(document).ready(function() {
      var inp = $('#formTypeInp');

      if($(location).attr('href').indexOf('/pages/free-test-drive-web') > 0) {
          inp.val(2);
      }
    
      if($(location).attr('href').indexOf('/pages/free-test-drive-sponsorship') > 0) {
          inp.val(3);
      }

      if($(location).attr('href').indexOf('/pages/free-test-drive-sms') > 0) {
          inp.val(4);
      }
    
      if($(location).attr('href').indexOf('/pages/free-test-drive-vf') > 0) {
          inp.val(5);
      }
      if($(location).attr('href').indexOf('/pages/free-test-drive-media') > 0) {
          inp.val(6);
      }

      if($(location).attr('href').indexOf('/pages/free-test-drive-pillar') > 0) {
          inp.val(9);
      }

      if($(location).attr('href').indexOf('/pages/free-test-drive-pro') > 0) {
          inp.val(13);
      }

      var timerId = setTimeout(function(){
          var clientId = false;

          try {
              if(typeof ga !== 'undefined') {
                  ga(function(tracker) {
                      clientId = tracker.get('clientId');
                      $('#googeIdInp').val(clientId);

                      clearTimeout(timerId);
                  });
              }
          } catch (e) {}

          try {
              if(!clientId) {
                  clientId = ga.getAll()[0].get('clientId');
                  $('#googeIdInp').val(clientId);

                  clearTimeout(timerId);
              }

          } catch (e) {}

      }, 3000);
  });

    var PhoneValidationConfig = {
        phoneId: '#DriveFormPhone',
        containerId: '.c-field__input-wrapper' 
     };
</script>


