            <input type="hidden" name="city" value="City">
            <input type="hidden" name="surname" value=", дякуємо ">
            <input type="hidden" name="email" value="temp@com.ua">
            <input type="hidden" name="formtype" value="0" id="formTypeInp">
            <input type="hidden" name="google_client_id" value="0" id="googeIdInp" />

            <!-- Submit -->
            <div>
              <button type="submit" class="btn btn--primary" id="submitTestDrive">
