{% comment %}
    Renders a pagination bar

    Accepts:
    - paginate: {Object} Paginate Liquid object (required)

    Usage:
    {% render 'pagination', paginate: paginate %}
{% endcomment %}


<div class="lk-table__pagination--wrapper">
  <div class="lk-table__pagination">
    
    {% unless paginate.previous.is_link %}
      <button class="lk-table__pagination--nav lk-table__pagination--prev disabled">
        {% render 'lk-icon-arrow-left' %}
      </button>
    {% else %}
      <a href="{{ paginate.previous.url }}#buy-history" class="lk-table__pagination--nav lk-table__pagination--prev">
        {% render 'lk-icon-arrow-left' %}
      </a>
  	{% endunless %}
    
    <ul>      
      {%- for part in paginate.parts -%}      
      	{%- if part.is_link -%}
      		<li><a href="{{ part.url }}#buy-history">{{ part.title }}</a></li>
      	{%- else -%}
      		{%- if part.title == paginate.current_page -%}
      			<li class="active">{{ part.title }}</li>
      		{%- else -%}
      			<li>...</li>
      		{%- endif -%}
      	{%- endif -%}
      {%- endfor -%}
    </ul>
    
    {% unless paginate.next.is_link %}
      <button class="lk-table__pagination--nav lk-table__pagination--next disabled">
        {% render 'lk-icon-arrow-right' %}
      </button>
  	{% else %}
      <a href="{{ paginate.next.url }}#buy-history" class="lk-table__pagination--nav lk-table__pagination--next">
        {% render 'lk-icon-arrow-right' %}
      </a>
  	{% endunless %}    
  </div>
</div>

