{% if customer.metafields.incust.incust_id != null %}
{% assign isIncustCustomer = true %}
{% else %}
{% assign isIncustCustomer = false %}
{% endif %}

<div class="col-lg-4 col-md-5 col-sm-16 lk-myaccount__left">
      <div class="lk-menu--mobile">        
        <div class="lk-menu--btn">
        	<img src={{ "lk-icon-menu.svg" | asset_url }} alt="customers_menu"/>
              Мій кабінет
        </div>
      </div>

      <div class="lk-menu__wrapper">
        <ul class="myaccount__menu lk-menu" data-tab-nav>
          <li class="lk-menu__main" >
            <div class="lk-menu--text">
              <img src={{ "lk-icon-menu.svg" | asset_url }} alt="customers_bonus"/>
              Мій кабінет
            </div>


            {% if isIncustCustomer == true %}
            <div class="lk-menu__descr">
              <div class="lk-menu__descr-name">Вітаємо, <span>{{  customer.first_name }}</div>
                {%comment%}
                <div class="lk-menu__descr-item">
                  <div>Ти з нами вже </div>
                  <div>
                  	<span>1</span><span> рік/років</span>
                  </div>
                  
                </div>
                {%endcomment%}
                <div class="lk-menu__descr-item">
                  <div>У тебе на рахунку </div>
                  <div>
                    <span data-lyt-points class="lyt-points">-</span><span>бал(ів)</span>
                  </div>

                </div>

                {% if customer.metafields.incust.mgm_code != null %}
                <div class="lk-menu__descr-item">
                  <div>Твій код для друзів </div>
                  <div>
                  	<span>{{ customer.metafields.incust.mgm_code }}</span>
                  </div>
                </div>
                {% endif %}
            </div>
            {% endif %}

          </li>

          {% if isIncustCustomer == true %}
          <li class="active-tab" data-tab="main">
            <a class="lk-menu--text lk-menu--text_mark" href="#main">glo BONUS CLUB</a>
          </li>
		  <li data-tab="invite-friend">
            <a class="lk-menu--text" href="#invite-friend">
              Рекомендувати друга
            </a>
            <!--<span class="lk-menu--bonus">+ 2 500 <div>балів</div></span>-->
          </li>
          
          <li data-tab="bonus-items">
            <a class="lk-menu--text" href="#bonus">
              Витратити бонуси
            </a>
          </li>
          <li data-tab="transaction-history">
            <a class="lk-menu--text" href="#transaction-history">
              Історія бонусів</a>
          </li>
          {% endif %}
          
          
          <li data-tab="profile">
            <a class="lk-menu--text" href="#profile">
              Профіль
            </a>
          </li>
          <li data-tab="order-history">
            <a class="lk-menu--text" href="#buy-history">
              Історія покупок
            </a>
          </li>

          {% if isIncustCustomer == true %}
          <li data-tab="faq">
            <a class="lk-menu--text" href="#faq">
              Маєш питання?
            </a>
          </li>
          <li data-tab="about">
            <a class="lk-menu--text" href="#about">
              Правила glo Bonus Club
            </a>
          </li>
          {% endif %}
        </ul>

        <div class="c-fieldset c-fieldset--offset sn-account lk-sn-account" id="snAccountBtnCont">
          <div class="lk-sn-account__descr">
          	Прив'язати аккаунт до соціальних мереж, щоб швидше авторизуватися
          </div>
          <div class="lk-sn-account__btns">
            <a href="#" id="fbAccount" class="btn-fb">
            	<span class="sn-state" data-id="sn_state1"></span>
            </a>
            
            <a href="#" id="googleAccount" class="btn-google">
              	<span class="sn-state" data-id="sn_state2"></span>
            </a>
          </div>          
        </div>
        <div id="snAccountError" class="form-error"></div>

        <div class="text-left"><div class="lk-logout">{{ 'layout.customer.log_out' | t | customer_logout_link }}</div></div>
      </div>
      
      
      
    </div>