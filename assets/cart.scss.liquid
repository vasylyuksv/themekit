.cart-header{
  margin-top: 30px;

}

.cart-header__nav{
  text-align: right;
  margin-bottom: 40px;

  a{
    display: block;
    font-size: 13px;
    text-transform: uppercase;
    text-decoration: underline;
  }

  .text-link{

    margin-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: flex-end;


    svg{
      margin-right: 17px;
    }

  }

  .btn-cart--clear{
    color: #E35205;
  }
}


.cart{
  color:  #2A2C2C;  

  table{
    margin: 0;
  }
  td{
    padding: 0;
    margin: 0;
  }
}

.cart__row{
  display: flex;
  flex-wrap: wrap;
  border: none;
  position: relative;
  margin-bottom: 28px;
  padding-bottom: 8px;

  &:after{
    content: '';
    height: 3px;
    width: 100%;
    border: 1px solid #EBEBEB;
    position: absolute;
    bottom: 0;
    left: 0;

  }

  &:focus{
    outline: none;
  }


  .cart__meta{
    order: 1;
    width: 100%;
  }
  .cart__image-block{
    order: 2;
    width: 150px;
    min-width: 150px;
  }  
  .cart__price{
    order: 3;
    width: 140px;
  }
  .cart__remove{
    display: none;
  }

}

.cart__meta{

  .cart__product-information{
    flex-direction: column;
    margin-bottom: 15px;


    .list-view-item__title{
      font-size: 20px;
      font-weight: bold;

      .cart__product-title{
        color:  #2A2C2C;  
      }
    }

    .product-details{
      margin: 0;
      padding: 0;
      margin-top: 12px;

      li{
        font-size: 15px;
        line-height: 1;
        font-weight: bold;
      }
    }
  }
}

.cart__image-block{

  .cart__image-wrapper{
    margin-right: auto;
    width: 130px;
    height: 130px;
    max-width: 130px;
    max-height: 130px;
    background: linear-gradient(180deg, #F6F6F6 0%, #FFFFFF 100%);
    align-items: flex-end;

    .cart__image{
      top: unset;
      bottom: 10px;
      width: 100%;      
    }
  }
}

.cart__price{
  text-align: left;
  min-height: 130px;
  display: flex;
  flex-direction: column;

  [data-cart-item-price-list]{
    font-size: 16px;
    line-height: 1.2;

  }

  [data-cart-item-bonuses]{
    color: #E35205;
    font-size: 13px;
    line-height: 1;
  }

  .cart__qty--wrapper{
    position: relative;
    /*     padding-bottom: 24px; */
    margin-bottom: 12px;


    .cart__qty{
      width: 120px;
      max-width: 120px;
      display: flex;
      margin: 0;
      align-items: center;
      justify-content: flex-start;

      .cart__qty-input{
        background: transparent;
        border: none;
        font-size: 16px;
        font-weight: bold;
        line-height: 1;
        padding: 0;
        margin: 0;
        width: 36px;
        -moz-appearance: textfield;

        &::-webkit-outer-spin-button,
        &::-webkit-inner-spin-button {
          -webkit-appearance: none;
        }

        &:focus{
          outline: none;
        }

      }
      .cart__qty-button{
        width: 40px;
        height: 40px;
        min-width: 40px;
        min-height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #B0B0B0;
        border-radius: 50%;
        border: none;
        background: linear-gradient(270deg, #F6F6F6 0%, #FFFFFF 100%);
        box-shadow: 0 12px 32px 0 #EBEBEB;
        font-size: 24px;
        padding: 0;
        cursor: pointer;
        transition: all .5s ease-in-out;

        -webkit-tap-highlight-color: transparent;

        &:hover{
          box-shadow: none;
        }
        &:focus{
          outline: none;
        }

      }

    }

    .cart__qty--error-bonus{
      margin-top: 10px;
      color: #D0021B;
      font-size: 9px;
      line-height: 1;
      /*       position: absolute; */
      /*       bottom: 0; */
      /*       left: 0; */
    }
  }

  .cart__final-price{
    font-size: 20px;
    font-weight: 600;
    line-height: 1.2;  
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;

    [data-cart-item-bonuses-total]{
      color: #E35205;
      font-size: 16px;
      line-height: 1.2;
      font-weight: normal;
    }

  }
}


.cart__footer--wrapper{
  padding: 0;
}
.cart__footer{
  background-color: #F5F5F5;
  padding: 38px 11px 12px 10px;

  .cart__footer--title{
    font-size: 20px;
    font-weight: bold;
    line-height: 26px;
    margin-bottom: 24px;

  }
  .cart-subtotal{
    font-size: 20px;
    line-height: 26px;
  }

  .cart-subtotal--bonuses{
    color: #E35205;
  }
  .cart-subtotal__price{
    padding: 0;
  }


  .cart__buttons-container{
    margin-top: 30px;
    margin-bottom: 16px;
    max-width: 100%;

    .cart__submit{
      background-color: #2A2C2C;
      color: #fff;

      &:hover{
        background-color: #fff;
        color: #2A2C2C;
      }

    }
  }
}

.cart__box{
  padding: 20px 11px 12px 10px;
  .btn{
    width: 100%;
  }
}


@media screen and (min-width: 768px){
  .cart-header__nav{
    display: flex;
    align-items: center;
    justify-content: space-between;

    .text-link{
      margin: 0;
    }
  }

  .cart__row{
    flex-wrap: nowrap;
    justify-content: space-between;

    .cart__meta{
      order: 2;
    }
    .cart__image-block{
      order: 1;
      width: 145px;
      min-width: 145px;
    }  
    .cart__price{
      order: 3;
      min-width: 160px;
    }
    .cart__remove{
      display: block;
      order: 4;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 60px;
      min-width: 60px;
    }
  }

  .cart__footer{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 64px 11px 14px 10px;

    .cart__footer--title{
      width: 100%;
      font-size: 26px;
      text-align: center;
    }
    .cart__footer--content{
      width: 340px;
      min-width: 340px;
      max-width: 340px;

      .cart-subtotal{
        padding-left: 75px;
      }

      .cart__submit{
        min-height: 44px;
        width: 100%;
      }
    }
  }

  .cart__box{
    padding: 30px 11px 30px 10px;

    .btn{
      width: 340px;
      min-width: 340px;
      margin-left: auto;
      display: block;
    }
  }


}

@media screen and (min-width: 992px){
  .cart__row{
    padding-bottom: 10px;
    margin-bottom: 10px;

    &:after{
      height: 1px;
      border: none;
      background: #EBEBEB;
    }

    &:last-child{
      padding-bottom: 0;
      &:after{
        content: none;
      }
    }

    .cart__image-block{
      .cart__image-wrapper{
        width: 125px;
        height: 125px;
        max-width: 125px;
        max-height: 125px;
      }
    }

    .cart__meta{
      width: 300px;
      max-width: 300px;
      padding-top: 12px;
    }
    .cart__price{
      width: 100%;
    }
  }
  .cart__price{
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    justify-content: space-evenly;

    .cart__qty--wrapper{
      margin: 0;
      width: 130px;

      .cart__qty--error-bonus{
        position: absolute;
        bottom: -25px;
        left: 0;
        font-size: 10px;
        margin: 0;
      }
    }

    [data-cart-item-price]{
      width: 130px;
    }
    .cart__final-price{
      width: 150px;
      height: auto;
      display: block;
    }

  } 

}


@media screen and (min-width: 1200px){
  .cart-header{
    margin-top: 0;
  }

  .cart__row{
    .cart__meta{
      min-width: 300px;
    }  	
  }

  .cart__meta{

    .cart__product-information{
      .list-view-item__title{
        font-size: 22px;
        display: block;
        line-height: 1.2;
      }

      .product-details{
        li{
          font-weight: normal;
        }
      }

    }
  }

  .cart__price {
    [data-cart-item-price-list]{
      font-size: 22px;
      font-weight: 600;
    }
    [data-cart-item-bonuses]{
      font-size: 16px;
      font-weight: normal;
    }

    .cart__qty--wrapper{
      width: 170px;

      .cart__qty{
        width: 150px;
        max-width: 150px;

        .cart__qty-button{
          width: 50px;
          height: 50px;
          min-width: 50px;
          min-height: 50px;

        }
      }
    }

    .cart__final-price{
      font-size: 22px;
    }
  }
}