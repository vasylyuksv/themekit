    background-position: left center;
    position: relative;


    img{
      width: 167px;
      position: absolute;
      top: -40px;
      left: 0;
      right: 0;
      margin: 0 auto;

    }
  }

  .item-descr{

    padding: 80px 20px 0;

    .item-descr__name{
