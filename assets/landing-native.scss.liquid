/***** Main Block *****/
.nativ-main{
  color: #fff;
  position: relative;
}

.nativ-main__bg{
  background-image: url({{'nativ-main_bg.png' | asset_url}});
  background-size: cover;
  background-position: 36%;
  background-repeat: no-repeat;
  height: 400px;
  min-height: 400px;
  text-align: right;
}

.nativ-main__descr{
  .btn--nativ{
    margin: 0 auto;
    display: block;
  }
}

.nativ-main__descr-title{
  font-size: 24px;
  line-height: 29px;
  text-transform: uppercase;
  color: #fff;
  font-weight: bold;
  margin-bottom: 36px;

  img{
    width: 14px;
  }

  span{
    text-transform: lowercase;
    font-weight: normal;
  }
}

.nativ-main__descr-summ{
  .summ-text{
    text-align: center;
    font-size: 16px;
    line-height: 18px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 8px;
  }

  .summ-value{
    display: flex;
    align-items: flex-end;
    justify-content: center;
    margin-bottom: 12px;

    div{
      font-size: 72px;
      line-height: 1;
      font-weight: bold;
      margin-right: 8px;
    }

    span{
      font-size: 23px;;
      line-height: 28px;
      text-transform: uppercase;
      margin-bottom: 10px;
    }
  }
}

.nativ-main__descr-text{
  margin: 20px 0 12px;
  font-size: 11px;
  line-height: 13px;
  text-transform: uppercase;
  font-weight: bold;
  text-align: center;

  .nativ-main__descr-text--desk,
  br{
    display: none;
  }
}

.nativ-main__disclaimer{
  margin:  34px 0 24px;
  p{
    color: #fff;
    font-size: 11px;
    line-height: 1;
    font-weight: 300;
    margin-bottom: 16px;
  }
}

@media screen and (min-width: 768px){
  .nativ-main{
    background-image: url({{'nativ-main_amp.svg' | asset_url}});
    background-position: left bottom;
    background-size: inherit;
    background-repeat: no-repeat;
  }
  .nativ-main__descr-title{
    width: 290px;
    margin-left: auto;
    margin-right: auto;
  }
}

