/***** City BLOCK *****/
.nativ-city{

  .slick-prev,
  .slick-next{
    top: 210px;
    width: 31px;
    height: 71px;

    &:before{
      font-size: unset;
      width: 31px;
      height: 71px;
      display: block;
    }
  }

  .slick-prev:before{
    background: url('{{'nativ-arrow_left.svg' | asset_url}}') no-repeat 100%;
      }
  .slick-next:before{
    background: url('{{'nativ-arrow_right.svg' | asset_url}}') no-repeat 100%;
      }

  @media screen and (max-width: 640px){

    .slick-prev{
      left: 10px;
    }
    .slick-next{
      right: 10px;
    }
  }

}

.nativ-city__item{
  padding: 82px 0 48px;
  /*   padding-top: 0px; */

  .item-img{
    height: 250px;
    max-height: 250px;
    text-align: center;    
