    position: relative;
  }
  .nativ-main__descr{
    margin-top: 50px;
    width: 30%;
  }
  .nativ-main__descr-title{
    width: 100%;
  }

  .nativ-main__disclaimer{
    width: 650px;
    margin-left: auto;
  }
}

@media screen and (min-width: 1200px){
  .nativ-main__bg{
    img{
      width: 260px;
    }

    &:before{
      content: '';
      width: 200px;
      height: 370px;
      position: absolute;
      bottom: 1px;
      left: -1px;
      background-color: #292c2c;
    }
  }

  .nativ-main__descr{
    width: 70%;
  }

  .nativ-main__descr-title{
    font-size: 58px;
    line-height: 64px;
    font-weight: 900;

    img{
      width: 30px;
    }
  }

  .nativ-main__descr--wrapper{
    margin-right: 27%;
  }

  .nativ-main__descr-summ{
    display: flex;
    align-items: center;

    .summ-text{
      font-size: 22px;
      line-height: 1;
      margin-top: 10px;
      margin-right: 30px;
    }
    .summ-value{
      font-size: 87px;
      line-height: 1;
    }
  }

  .nativ-main__descr-text{
    margin: 40px 0 0;
    font-size: 18px;
    line-height: 1.2;
    letter-spacing: 0.5px;
    text-align: left;
    margin-bottom: 16px;

    .nativ-main__descr-text--desk{
      display: inline-block;
    }
    br{
      display: block;
    }
  }
}

@media screen and (min-width: 1200px) and (max-width: 1449px){
  .nativ-main__descr{
    margin-top: 40px;
  }
  .nativ-main__descr-title{
