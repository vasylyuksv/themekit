/***** main *****/
.page-loyality-landing__bgheader{
  background-color: #000;

  #PageContainer{
    padding-top: 0px;
  }
  .site-footer{
    margin-top: 0px;
  }
}

.btn--orange{
  background-color: #FF4E00;
  color: #fff;
  width: 100%;
  display: block;
  border-color: #FF4E00;
  padding-top: 13px;
  padding-bottom: 13px;
  font-weight: 600 !important;
  
  
  &:hover{
  	background-color: transparent !important;
    color: #FF4E00 !important;
  }

  &.btn--orange-link{
/*     font-weight: bold !important; */
    letter-spacing: 0.05em;
    background-color: transparent;
    color: #FF4E00;
    border-color: transparent;
    
    &:hover{      
      color: #fff !important;
    }
  }

  &.btn--orange-white{
/*     font-weight: bold !important; */
    letter-spacing: 0.05em;
    color: #FF4E00;
    background-color: #fff;
    border-color: #fff;
    
    &:hover{      
      color: #fff !important;
    }
  }


  @media screen and (min-width: 550px){
    max-width: 265px;
  }
}

/*title*/
.loyality__title{  
  text-align: center;
  margin-bottom: 30px;

  h2{
    color: #fff;
    font-size: 30px;
    font-weight: 900;
    line-height: 1.2;   
    text-transform: uppercase;
    margin-bottom: 20px;

    &:after{
      content: none;
    }
    
    .small{
    	text-transform: lowercase;
    }
  }

  p{
    color: #fff;
    font-size: 14px;
    line-height: 1.6;


    &:after{
      display: block;
      margin: 20px auto 0;
      content: '';
      width: 80px;
      height: 4px;
      background-color: #fff;

    }
  }

  &.loyality__title--black{
    h2,
    p{
      color: #2F2F2F;
    }
    p:after{
      background-color: #2F2F2F;
    }
  }

  @media screen and (min-width: 992px){
    margin-bottom: 100px;
    h2{
      font-size: 36px;
    }
    p{
      font-size: 16px;

      &:after{
        margin-top: 30px;
      }
    }
  }
}

/***** end main *****/


