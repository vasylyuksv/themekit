/***** Main Block *****/
.friends-main{
  margin-bottom: 52px;
  
  .container{
  	margin-top: -24vw;
  }

  .friends-main__bg{
    .friends-main__bg--desk{
      display: none;
    }
  }

  .friends-main__title{
    font-size: 26px;
    font-weight: 700;
    line-height: 1;
    text-transform: uppercase;
    margin-bottom: 20px;

    &:after{
      content: none;
    }

    img{
      width: 13px;
    }

    .small{
      text-transform: lowercase;
    }
  }
}

@media screen and (min-width: 768px){
  .friends-main{
    .friends-main__bg{
      .friends-main__bg--desk{
        display: block;
      }
      .friends-main__bg--mob{
        display: none;
      }
    }
  }
}

@media screen and (min-width: 992px){
  .friends-main{
    .container{
      max-width: 1098px;
      margin-top: -24vw;

      .friends-main__title{
        font-size: 55px;
        line-height: 1.2;
        margin-bottom: 28px;

        img{
          width: 28px;
        }
      }

      p{
        font-size: 24px;
        line-height: 29px;
      }
    }    
  }
}

@media screen and (min-width: 992px){
  .friends-main{
    .container{
      max-width: inherit;
    }
  }
}
/***** end Main Block *****/

/***** Block Friends CHOOSE *****/
.friends-choose{
  margin-bottom: 40px;

  .friends-choose__title{
    font-size: 26px;
    line-height: 34px;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 20px;
    padding: 0 20px;

    &:after{
      content: none;
    }
  }
}

.friends-choose__devices{
  & > div{
    padding: 24px 30px 40px;


    &.friends-choose__hyper{
      background-image: url({{'friends-choose-hyper-bg.jpg' | asset_url}});
      background-size: cover;
      background-repeat: no-repeat;
      background-position: top right;
    }

    &.friends-choose__pro{
      background-image: url({{'friends-choose-pro-bg.jpg' | asset_url}});
      background-size: cover;
      background-repeat: no-repeat;
    }
  }

  img{
    width: 144px;
    margin: 0 auto;
    display: block;
  }

  .friends-choose__devices--title{
    font-size: 22px;
    line-height: 29px;
    font-weight: 400;
    text-align: center;
    text-transform: uppercase;
    margin-top: -50px;
    margin-bottom: 32px;
    color: #fff;
  }

  .btn{
    font-size: 16px;
    font-weight: 400;
    height: 60px;
    width: 100%;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-color: #fff;
    text-transform: inherit;

  }
}

@media screen and (min-width: 450px){
  .friends-choose__devices{
    .btn{
      max-width: 305px;
      margin-left: auto;
      margin-right: auto;
    }
  }
}

@media screen and (min-width: 992px){
  .friends-choose{
    margin-bottom: 20px;

    .friends-choose__title{
      font-size: 55px;
      line-height: 72px;
      margin-bottom: 36px;

      br{
        display: none;
      }

    }
  }
  .friends-choose__devices{
    display: flex;
    justify-contetn: space-between;

    & > div{
      width: 100%;
      padding: 30px 60px 110px;
    }
  }
}

@media screen and (min-width: 1200px){

  .friends-choose__devices{
    display: flex;
    justify-contetn: space-between;

    & > div{
      width: 100%;
      padding: 30px 80px 110px;
    }

    img{
      width: 240px;
    }    

    .friends-choose__devices--title{
      font-size: 34px;
      line-height: 45px;
      text-align: left;
      margin-top: -90px;

    }
  }

  .friends-choose__hyper{
    position: relative;

    & > div{
      margin-left: auto;
    }

    &:after{
      content: '';
      width: 100%;
      height: 60px;
      position: absolute;
      bottom: -1px;
      left: 0;
      background-color: #fff;
    }
  }

  .friends-choose__pro{
    & > div{
      margin-right: auto;
    }
  }

  .friends-choose__devices--wrapper{
    width: 305px;
  }
}

@media screen and (min-width: 1200px) and (max-width: 1449px){
  .friends-choose__devices{
    img{
    	width: 180px;
    }
    .friends-choose__devices--title{
    	margin-top: -70px;
      font-size: 30px;
      line-height: 36px;
      margin-bottom: 12px;
    }
  }
  .friends-choose__devices--wrapper{
  	width: 245px;
  }
}

@media screen and (min-width: 1450px){
  .friends-choose__devices{
    & > div{

      padding: 30px 160px 110px;
    }
  }
}
/***** end Block friends CHOOSE *****/


/***** Block Todo *****/
.friends-todo{
  margin-bottom: 36px; 
}

.friends-todo__title{
  font-size: 22px;
  line-height: 27px;
  font-weight: 700;
  text-transform: uppercase;

  &:after{
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background-color: #2f2f2f;
    margin: 20px 0 40px;
  }
}

.friends-todo__item{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30px;
}

.todo__item--img{
  width: 120px;
  min-width: 120px;
  display: flex;
  align-items: flex-start;
  justify-content: center;

  .todo__item--img-arrow{
    display: none;
  }
}

.todo__item--descr{
  font-size: 16px;
  line-height: 20px;
}

.friends-todo__list{
  .friends-todo__item:nth-child(1){
    img:not(.todo__item--img-arrow){
      width: 82px;
    }
  }
  .friends-todo__item:nth-child(2){
    img:not(.todo__item--img-arrow){
      width: 65px;
    }
  }
  .friends-todo__item:nth-child(3){
    img:not(.todo__item--img-arrow){
      width: 65px;
    }
  }
  .friends-todo__item:nth-child(4){   

    .todo__item--img{
      margin-top: -30px;
    }

    img:not(.todo__item--img-arrow){
      width: 77px;
    }
  }
}

.friends-todo__text{
  font-size: 22px;
  line-height: 27px;
  text-align: center;
  font-weight: 700;
  padding: 0 48px;
  
  a{
  	text-decoration: underline;
  }
}

@media screen and (min-width: 992px){
  .friends-todo{
    margin-bottom: 84px;
  }

  .friends-todo__title{
    font-size: 40px;
    line-height: 49px;

    br{
      display: none;
    }

    &:after{
      margin: 24px 0 50px;
    }
  }

  .friends-todo__item{
    margin-bottom: 52px;
    align-items: center;
  }

  .todo__item--img{
