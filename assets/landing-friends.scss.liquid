    }
  }

  .todo__item--descr{
    font-size: 16px;
    line-height: 1.8;
  }

  .friends-todo__list{
    .friends-todo__item:nth-child(1){
      img:not(.todo__item--img-arrow){
        /*         width: 82px; */
      }
    }
    .friends-todo__item:nth-child(2){
      img:not(.todo__item--img-arrow){
        /*         width: 65px; */
        margin-left: 40px;
      }
      .todo__item--img-arrow{
        margin-left: 80px;
      }
    }
    .friends-todo__item:nth-child(3){
      img:not(.todo__item--img-arrow){
        /*         width: 65px; */
      }
      .todo__item--img-arrow{
        margin-left: 40px;
      }
    }
    .friends-todo__item:nth-child(4){
      /*       margin-top: -30px; */

      img:not(.todo__item--img-arrow){
